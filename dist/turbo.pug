doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Beach Art 
    meta(name='description', content='Do Androids Dream of Electric Sand Beach? The answer may surprise you.')
    style(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,800,600' rel='stylesheet' type='text/css')
  body
    header.menu
      .responsive
        .logo
        nav.top-nav
          a(href='#') Featured
          a(href='#') Top 10
          a(href='#') Competitions
    main#slideshow.hero
      .responsive.full-width.hero-slider
        .container
          .caption
            h1 Beach art
            p The best sand castles in the world!!
          .hero-image

            svg.blur-ie
              defs
                filter#blur
                  fegaussianblur(stddeviation='3')
              image(xlink:href=src=require('./images/@1x/slide-image-1.jpg'), width='1440' height='600', filter='url(#blur)')

            img.blur(src=require('./images/@1x/slide-image-1.jpg'), srcset= require('./images/@1x/slide-image-1.jpg')+ ' 1x, ' + require('./images/@2x/slide-image-1@2x.jpg') + ' 2x', alt='')

        .container
          .caption
            h1 Ready to compete?
            p Gear up for our next competition
          .hero-image

            svg.blur-ie
              defs
                filter#blur
                  fegaussianblur(stddeviation='3')
              image(xlink:href=src=require('./images/@1x/slide-image-2.jpg'), width='1440' height='600', filter='url(#blur)')


            img.blur(src=require('./images/@1x/slide-image-2.jpg'), srcset=require('./images/@1x/slide-image-2.jpg') + ' 1x, ' + require('./images/@2x/slide-image-2@2x.jpg') + ' 2x', alt='')
    section#featured.featured
      .responsive
        h2 Best art this month
        p Jurassic beach!
        img(src=require('./images/pixel.gif'), srcset=require('./images/@1x/image-1.png') + ' 1x, ' + require('./images/@2x/image-1@2x.png') + ' 2x', alt='')
        a.btn(href='./images/@1x/image-1.png' data-retina-href='./images/@2x/image-1@2x.png') Full screen
    section#gallery.gallery
      .responsive
        .tile.large.wow.fadeInUp(data-wow-delay="0s")
            img(src=require('./images/@1x/image-gallery-1.jpg'), srcset=require('./images/@1x/image-gallery-1.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-1@2x.jpg') + ' 2x' alt='')
        .tile.medium.wow.fadeInUp(data-wow-delay="0.5s")
            img(src=require('./images/@1x/image-gallery-2.jpg'), srcset=require('./images/@1x/image-gallery-2.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-2@2x.jpg') + ' 2x' alt='')
        .tile.medium.wow.fadeInUp(data-wow-delay="1s")
            img(src=require('./images/@1x/image-gallery-3.jpg'), srcset=require('./images/@1x/image-gallery-3.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-3@2x.jpg') + ' 2x' alt='')
        .tile.small.wow.fadeInUp(data-wow-delay="0s")
            img(src=require('./images/@1x/image-gallery-4.jpg'), srcset=require('./images/@1x/image-gallery-4.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-4@2x.jpg') + ' 2x' alt='')
        .tile.small.wow.fadeInUp(data-wow-delay="0.5s")
            img(src=require('./images/@1x/image-gallery-5.jpg'), srcset=require('./images/@1x/image-gallery-5.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-5@2x.jpg') + ' 2x' alt='')
        .tile.small.wow.fadeInUp(data-wow-delay="1s")
            img(src=require('./images/@1x/image-gallery-6.jpg'), srcset=require('./images/@1x/image-gallery-6.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-6@2x.jpg') + ' 2x' alt='')
        .tile.large.wow.fadeInUp(data-wow-delay="1.5s")
            img(src=require('./images/@1x/image-gallery-7.jpg'), srcset=require('./images/@1x/image-gallery-7.jpg') + ' 1x, ' + require('./images/@2x/image-gallery-7@2x.jpg') + ' 2x' alt='')

    section#side-feature.side-feature
      .responsive
        .side.first.wow.bounceInLeft
          h2 Let's get technical
          p The science behind the perfect sand castle
          a.btn(href='#') See Here
        .side.last.wow.bounceInRight
          img(src=require('./images/pixel.gif'), srcset=require('./images/@1x/image-2.png') + ' 1x, ' + require('./images/@2x/image-2@2x.png') + ' 2x', alt='')

    footer.footer
      .responsive
        nav.footer-nav
          a(href='#') Featured
          a(href='#') Top 10
          a(href='#') Competitions
        .social-container
          h3 Follow us
          ul.social-icons
            li.wow.fadeInUp(data-wow-delay="0s")
              a(href='#')
                i.facebook
            li.wow.fadeInUp(data-wow-delay="0.2s")
              a(href='#')
                i.twitter
            li.wow.fadeInUp(data-wow-delay="0.3s")
              a(href='#')
                i.github
            li.wow.fadeInUp(data-wow-delay="0.4s")
              a(href='#')
                i.medium
            li.wow.fadeInUp(data-wow-delay="0.5s")
              a(href='#')
                i.rss
